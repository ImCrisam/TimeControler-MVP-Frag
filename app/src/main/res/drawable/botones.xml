<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="360dp" />
                    <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
                    <gradient android:gradientRadius="100" android:centerColor="@color/colorPrimaryDark" android:endColor="@color/colorTrasparente" android:startColor="@color/colorPrimaryDark" android:type="radial" />

                </shape>
            </item>
        </layer-list>
    </item>

    <item >
        <layer-list>
            <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="360dp" />
                    <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
                    <gradient android:gradientRadius="90" android:centerColor="@color/colorTrasparente" android:endColor="@color/colorPrimaryDark" android:startColor="@color/colorTrasparente" android:type="radial" />

                </shape>
            </item>
        </layer-list>
    </item>



</selector>
